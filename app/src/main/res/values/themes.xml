<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ascent_color</item>
        <item name="colorSecondaryVariant">@color/secondary_text_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Button.CircularTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyMagnum.Circular</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyMagnum.Button.Black</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="iconSize">@dimen/_15sdp</item>
    </style>

    <style name="ShapeAppearance.MyMagnum.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.MyMagnum.Button.Black" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.TextInputLayout.Form" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="hintTextColor">@color/gray_300</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Widget.TextInputEditText.Form" parent="">
        <item name="android:paddingStart">@dimen/_2sdp</item>>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
        <item name="android:paddingTop">@dimen/_24sdp</item>
    </style>

    <style name="Widget.TextInputLayout.FilledBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="hintTextColor">@color/gray_300</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="errorIconDrawable">@null</item>
    </style>



</resources>